<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sofa="http://sofastack.io/schema/sofaboot"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://sofastack.io/schema/sofaboot   http://sofastack.io/schema/sofaboot.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
       default-autowire="byName">


    <bean id="iExtension" class="com.alipay.sofa.runtime.integration.extension.IExtensionImpl"/>
    <sofa:extension-point name="word" ref="iExtension">
        <sofa:object class="com.alipay.sofa.runtime.integration.extension.ExtensionDescriptor"/>
    </sofa:extension-point>
    <sofa:extension bean="iExtension" point="word">
        <sofa:content>
            <word>
                <value>SOFABoot Extension Test</value>
            </word>
        </sofa:content>
    </sofa:extension>

</beans>