<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">

    <Properties>
        <Property name="ISLE_LOG_LEVEL">${sys:logging.level.com.alipay.sofa.isle}</Property>
        <Property name="ISLE_LOG_PATH">${sys:logging.path}</Property>
        <Property name="ISLE_FILE_ENCODING">${sys:file.encoding}</Property>
    </Properties>

    <appenders>
        <RollingFile name="ERROR-APPENDER" fileName="${ISLE_LOG_PATH}/sofa-isle/common-error.log" append="true"
                     filePattern="${ISLE_LOG_PATH}/sofa-isle/common-error.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${ISLE_FILE_ENCODING}">
                <pattern>%d %-5p %-32t - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="DEFAULT-APPENDER" fileName="${ISLE_LOG_PATH}/sofa-isle/common-default.log" append="true"
                     filePattern="${ISLE_LOG_PATH}/sofa-isle/common-default.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${ISLE_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${ISLE_FILE_ENCODING}">
                <pattern>%d %-5p %-32t - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </appenders>

    <loggers>
        <root level="${ISLE_LOG_LEVEL}" additivity="false">
            <appender-ref ref="DEFAULT-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </root>
    </loggers>
</configuration>